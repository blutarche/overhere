<resources>


    <style name="MaterialTheme" parent="MaterialTheme.Base">

    </style>

    <style name="MaterialTheme.Base" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="drawerArrowStyle">@style/toggler</item>

        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/ic_menu_icon</item>
    </style>

    <style name="toggler" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/textColorPrimary</item>
    </style>

</resources>
